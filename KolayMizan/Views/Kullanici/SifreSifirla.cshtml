@{
    ViewData["Title"] = "Şifre Sıfırla";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center">Kolay Mizan - Şifre Sıfırla</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Hata))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Hata
                        </div>
                    }
                    <form method="post" asp-controller="Kullanici" asp-action="SifreSifirla">
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <input type="hidden" name="kod" value="@ViewBag.Kod" />
                        <div class="mb-3">
                            <label for="yeniSifre" class="form-label">Yeni Şifre</label>
                            <input type="password" class="form-control" id="yeniSifre" name="yeniSifre" required>
                        </div>
                        <div class="mb-3">
                            <label for="yeniSifreTekrar" class="form-label">Yeni Şifre Tekrar</label>
                            <input type="password" class="form-control" id="yeniSifreTekrar" name="yeniSifreTekrar" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Şifremi Sıfırla</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-controller="Kullanici" asp-action="Giris">Giriş sayfasına dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
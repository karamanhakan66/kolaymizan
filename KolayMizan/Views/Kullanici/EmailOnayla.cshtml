@{
    ViewData["Title"] = "E-posta Onaylama";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center">Kolay Mizan - E-posta Onaylama</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Hata))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Hata
                        </div>
                    }
                    <form method="post" asp-controller="Kullanici" asp-action="EmailOnayla">
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <input type="hidden" name="kod" value="@ViewBag.Kod" />
                        <div class="alert alert-info">
                            <p>@ViewBag.Email e-posta adresinizi onaylamak üzeresiniz. Onaylamak için aşağıdaki butona tıklayın.</p>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">E-posta Adresimi Onayla</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-controller="Kullanici" asp-action="Giris">Giriş sayfasına dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center">Kolay Mizan - Şifremi Unuttum</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Hata))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Hata
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.Basarili))
                    {
                        <div class="alert alert-success">
                            @ViewBag.Basarili
                        </div>
                    }
                    <form method="post" asp-controller="Kullanici" asp-action="SifremiUnuttum">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta Adresi</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Şifre Sıfırlama Bağlantısı Gönder</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-controller="Kullanici" asp-action="Giris">Giriş sayfasına dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 